@font-face
    font-family 'Myanmar MN'
    src url('../fonts/MyanmarMN/MyanmarMN.ttf') format('truetype')

@font-face
    font-family 'Myanmar MN'
    font-weight bold
    src url('../fonts/MyanmarMN/MyanmarMN-Bold.ttf') format('truetype')
    
*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    // cursor none

h1, h2, h3, h4, a
    font-family Myanmar MN
    font-weight bold

