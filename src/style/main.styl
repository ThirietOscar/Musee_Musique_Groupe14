.start-part
    position relative
    width 100vw
    height 100vh

    &__background
        top 0
        left 0
        width 100%
        height 100%

    &__logotype
        position absolute
        width 105px
        height 105px
        top 60px
        left 50%
        transform translateX(-50%)

    &__logotype-text
        font-family 'Myanmar MN'
        font-size: 30px;
        font-weight bold
        color white
        position absolute
        top 180px
        left 50%
        transform translate(-50%)
        text-align center

    &__button-start
        position absolute
        bottom 95px
        left 50%  
        width 150px
        height 50px
        padding 10px 0
        border 3px solid #8A7DB2
        border-radius 8px
        background-color transparent
        font-family 'Myanmar MN'
        font-weight bold
        font-size 18px
        color #8A7DB2
        text-transform uppercase
        cursor pointer
        transform translate(-50%)
        box-shadow 0 0 0 0 rgba(#000000, .2)
        animation pulse 2.5s infinite
        outline 0
        transition 0.8s
    
    &__button-start:hover
        animation: none;
        transition 0.6s
        color #F8D664
        border 3px solid #F8D664

    & canvas 
        background linear-gradient(180deg, rgba(203,201,255,1) 0%, rgba(246,235,255,1) 100%)
    
    @keyframes pulse
        0%
            transform(scale(.6))
            opacity 0.8
        70%
            transform(scale(.8))
            box-shadow 0 0 0 50px rgba(#000000, 0)
        100%
            transform(scale(.6))
            box-shadow 0 0 0 0 rgba(#000000, 0)

.main-part
    display none
    position relative
    width 100vw
    height 100vh
    opacity 0
    //background: linear-gradient(180deg, #FFC400 -78.86%, #FFFAE7 100%)

    &__logotype
        position absolute
        width 105px
        height 105px
        top 60px
        left 50%
        transform translateX(-50%)

    &__background
        top 0
        left 0
        width 100%
        height 100%
        background white

    &__object
        position absolute
        bottom 60px
        left 50%
        display flex
        justify-content center 
        align-items center
        transform translate(-50%)   

        &__name
            color #B6AA81

        &__info-icon
            filter invert(96%) sepia(8%) saturate(1867%) hue-rotate(338deg) brightness(81%) contrast(70%)
            width 25px
            height auto
            margin-left 15px
            cursor pointer

    &__information-container
            position absolute
            top 0
            left 0
            width 100vw
            height 100vh
            display flex
            flex-direction column
            justify-content center
            align-items center
            pointer-events none

        &__information
            width 580px
            height 325px
            background-color rgba(255, 255, 255, 0.4)
            backdrop-filter blur(7px)
            border-radius 9px
            transition 0.5s
            display flex
            flex-direction column
            justify-content center
            align-items center

            &__hidden
                opacity 0

            &__text
                margin 20px
                padding 0px 50px 0px 50px
                font-family 'HelveticaNeue'
                font-weight lighter
                line-height 25px

    .seek_bar
        position absolute
        left 6%
        top 40%
        bottom 30vh
        width 3vh
        height 200px
        display flex
        flex-direction column
        justify-content space-between

        .current_object
            border thin solid white

        .background_object
            height 1.9vh
            width 1.9vh
            border-radius 50%
            position relative
            transition 0.5s
                    
            .seek_bar_object
                position absolute
                top 0.2vh
                left 0.2vh
                height 1.5vh
                width 1.5vh
                background white
                border-radius 50%  
           
            &:hover   
                transform scale(1.5)
                animation-name button-transition
                animation-duration .1s
                animation-timing-function ease-out 
                animation-fill-mode back 

    .equalizer-button
        position absolute
        top 10%
        right 7%
        width 30px
        height 30px

        .equalizer
            position absolute
            top 7px
            left 5px
            width 30px
            height 30px

            &__bar
                position absolute
                bottom 0
                width 0
                height 30px
                border-left 4px solid white
                transition 0.2s ease-out 0.2s

            &__1
                left 0

            &__2
                left 6px

            &__3
                left 12px

            &__4
                left 18px

            &__5
                left 24px

            &--on

                .equalizer__bar
                    animation-name equalizer-play
                    animation-iteration-count infinite
                    animation-timing-function ease
                    animation-fill-mode both

                .equalizer__1
                    animation-duration 0.6s

                .equalizer__2
                    animation-duration 0.5s

                .equalizer__3
                    animation-duration 0.58s

                .equalizer__4
                    animation-duration 0.52s

                .equalizer__5
                    animation-duration 0.56s

            &--off 
            
                .equalizer__bar
                    animation-name equalizer-stop
                    animation-iteration-count 1
                    animation-fill-mode forwards

@keyframes equalizer-play
    0%
    100%
        height 8px    
    50%
       height 20px      
       
@keyframes equalizer-stop
    0%
        height 15px
    100%
        height 3px

@keyframes button-transition
    0%
        transform scale(1)
    100%
        transform scale(1.5)