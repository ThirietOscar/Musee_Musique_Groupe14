.start-part
    position relative
    width 100vw
    height 100vh

    &__background
        top 0
        left 0
        width 100%
        height 100%

    &__logotype
        position absolute
        width 105px
        height 105px
        top 60px
        left 50%
        transform translateX(-50%)

    &__logotype-text
        font-family 'Myanmar MN'
        font-size: 30px;
        font-weight bold
        position absolute
        top 180px
        left 50%
        transform translate(-50%)
        text-align center

    &__button-start
        position absolute
        width 188px
        height 64px
        bottom 95px
        left 50%  
        font-family 'Myanmar MN'
        font-weight bold
        font-size 30px
        text-transform uppercase
        background none
        border 3px solid #000000
        border-radius 7px
        padding 10px 0
        transform translate(-50%)

    & canvas 
        background white

.main-part
    display none
    position relative
    width 100vw
    height 100vh
    opacity 0
    //background: linear-gradient(180deg, #FFC400 -78.86%, #FFFAE7 100%)

    &__logotype
        position absolute
        width 105px
        height 105px
        top 60px
        left 50%
        transform translateX(-50%)

    &__background
        top 0
        left 0
        width 100%
        height 100%
        background white

    &__object
        position absolute
        bottom 60px
        left 50%
        display flex
        justify-content center 
        align-items center
        transform translate(-50%)   

        &__name
            color #B6AA81

        &__info-icon
            filter invert(96%) sepia(8%) saturate(1867%) hue-rotate(338deg) brightness(81%) contrast(70%)
            width 25px
            height auto
            margin-left 15px


         

