@font-face
    font-family 'HelveticaNeue'
    src url('../fonts/HelveticaNeue/HelveticaNeue.ttf') format('truetype')

@font-face
    font-family 'Myanmar MN'
    src url('../fonts/MyanmarMN/MyanmarMN.ttf') format('truetype')

@font-face
    font-family 'Myanmar MN'
    font-weight bold
    src url('../fonts/MyanmarMN/MyanmarMN-Bold.ttf') format('truetype')
    

*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    // cursor none

canvas
    position absolute
    top 0
    left 0
    background-image radial-gradient(#ffffff 2%, transparent 2%), radial-gradient(#ffffff 2%, transparent 2%)
    background-color #222222
    background-position 0 0, 25px 25px
    background-size 50px 50px
    display none

