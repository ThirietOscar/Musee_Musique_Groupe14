@font-face
    font-family 'HelveticaNeue'
    src url('../fonts/HelveticaNeue/HelveticaNeue.ttf') format('truetype')

@font-face
    font-family 'HelveticaNeue'
    font-weight lighter
    src url('../fonts/HelveticaNeue/HelveticaNeue-Light.ttf') format('truetype')

@font-face
    font-family 'Myanmar MN'
    src url('../fonts/MyanmarMN/MyanmarMN.ttf') format('truetype')

@font-face
    font-family 'Myanmar MN'
    font-weight bold
    src url('../fonts/MyanmarMN/MyanmarMN-Bold.ttf') format('truetype')
   
*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
